<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:id="@+id/nav_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/navigation_right_margin">
        <FrameLayout
            android:id="@+id/nav_left_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:minWidth="50dp"
            android:minHeight="40dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/nav_left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"/>
            <TextView
                android:id="@+id/nav_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:layout_gravity="left|center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="15dp"
                android:textColor="@color/black"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/nav_right_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:minWidth="50dp"
            android:minHeight="40dp">

            <ImageView
                android:id="@+id/nav_right_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingTop="3dp"/>
            <TextView
                android:id="@+id/nav_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/nav_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#ff000000"
                android:textSize="@dimen/text_size_xl"/>

            <FrameLayout
                android:id="@+id/nav_titleView_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
            </FrameLayout>
        </FrameLayout>

        <View
            android:id="@+id/nav_sep_line"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/split_line_grey_color_e0"/>
    </RelativeLayout>
</FrameLayout>