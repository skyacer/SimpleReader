<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/item_bg_color"
    >
 	<RelativeLayout
 	    android:id="@+id/feeditem_right"
 	    android:layout_toLeftOf="@+id/feeditem_image"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	   	android:padding="8dp"
 	   	android:layout_centerVertical="true"
 	    >
	    <TextView
	        android:id="@+id/feeditem_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="标题栏"
	        android:textSize="18sp" />
	    <TextView
	        android:id="@+id/feeditem_pubdate"
	        android:layout_marginTop="10dp"
	        android:layout_below="@id/feeditem_title"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/gray"
	        android:text="8分钟前"/>
     </RelativeLayout>
	 <ImageView
	     android:id="@+id/feeditem_image"
	     android:layout_alignParentRight="true"
	     android:layout_centerVertical="true"
	     android:layout_width="80dp"
	     android:layout_height="80dp"
	     android:padding="5dp"
	     android:src="@drawable/blue"
	     android:scaleType="centerCrop"
	     />
</RelativeLayout>