<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rv_avatar_personal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_170dp"
                android:background="@color/white"
>
    <ImageView
        android:id="@+id/personal_info_avatar_img"
        android:layout_width="@dimen/size_82dp"
        android:layout_height="@dimen/size_82dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_personal_info_avatar"
    />
    <TextView
        android:id="@+id/personal_info_avatar_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text = "@string/personal_info_login"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/personal_info_avatar_hint"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size_30dp"
    />
</RelativeLayout>