<resources>
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="item_bg_color">@color/white</item>
		<item name="title_bar_bg">@drawable/shap_title_bar</item>
		<item name="item_list_bg">@color/gray</item>
		<item name="item_detail_bottom_bar_bg">@color/white</item>
		<item name="home_bg">@drawable/home_bg_default</item>
		<item name="switch_mode_btn">@drawable/composer_sun</item>
		<item name="detail_btn_favorite">@drawable/btn_favorite_empty</item>
		<item name="detail_btn_share">@drawable/btn_to_share</item>
		<item name="detail_btn_comment">@drawable/btn_to_comment</item>
		<item name="detail_btn_more">@drawable/btn_more</item>
		<item name="detail_divide_line_bg">@color/line_color</item>
		<item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- 夜间模式  -->
    <style name="AppNightTheme" parent="AppTheme">
        <item name="item_bg_color">@color/light_black</item>
        <item name="item_list_bg">@color/black</item>
        <item name="title_bar_bg">@drawable/shap_title_bar_night</item>
        <item name="item_detail_bottom_bar_bg">#0c0c0c</item>        
		<item name="home_bg">@drawable/home_bg_night</item>
		<item name="switch_mode_btn">@drawable/composer_moon</item>
		<item name="detail_btn_favorite">@drawable/btn_favorite_empty_night</item>
		<item name="detail_btn_share">@drawable/btn_to_share_night</item>
		<item name="detail_btn_comment">@drawable/btn_to_comment_night</item>
		<item name="detail_btn_more">@drawable/btn_more_night</item>
		<item name="detail_divide_line_bg">@color/line_color_night</item>
	</style>
    
    <style name="img_btn_style">
        <item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:background">@drawable/img_btn_selector</item>
    </style>

	<style name="img_back_btn_style">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:background">@drawable/selector_back_btn_navigationbar_white</item>
	</style>

	<!-- animation 样式 -->
	<style name="activityAnimation" parent="@android:style/Animation">
		<item name="android:activityOpenEnterAnimation">@anim/activity_slide_right_in</item>
		<item name="android:activityOpenExitAnimation">@anim/activity_slide_left_out</item>
		<item name="android:activityCloseEnterAnimation">@anim/activity_slide_left_in</item>
		<item name="android:activityCloseExitAnimation">@anim/activity_slide_right_out</item>
		<item name="android:taskOpenEnterAnimation">@anim/activity_slide_right_in</item>
		<item name="android:taskOpenExitAnimation">@anim/activity_slide_left_out</item>
		<item name="android:taskCloseEnterAnimation">@anim/activity_slide_left_in</item>
		<item name="android:taskCloseExitAnimation">@anim/activity_slide_right_out</item>
	</style>

</resources>
